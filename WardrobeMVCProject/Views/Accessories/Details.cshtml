@model WardrobeMVCProject.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<h4>Accessory</h4>
<hr />
<div class="row container accessoriesDetailRow">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <h5>@Html.DisplayNameFor(model => model.AccessoriesName): @Html.DisplayFor(model => model.AccessoriesName)</h5>
        <h5>@Html.DisplayNameFor(model => model.AccessoriesType): @Html.DisplayFor(model => model.AccessoriesType)</h5>
        <h5>@Html.DisplayNameFor(model => model.Color.ColorName): @Html.DisplayFor(model => model.Color.ColorName)</h5>
        <h5>@Html.DisplayNameFor(model => model.Occasion.OccasionName) @Html.DisplayFor(model => model.Occasion.OccasionName)</h5>
        <h5>@Html.DisplayNameFor(model => model.Season.SeasonName) @Html.DisplayFor(model => model.Season.SeasonName)</h5>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="thumbnail">
            <img src="@Html.DisplayFor(model => model.AccessoriesPhoto)" />
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoriesID }) |
    @Html.ActionLink("Back to List", "Index")
</p>