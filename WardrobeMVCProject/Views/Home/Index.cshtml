@{
    ViewBag.Title = "Home Page";
}
<!--Home page carousel-->
<div id="homeCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#homeCarousel" data-slide-to="1"></li>
        <li data-target="#homeCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="img-responsive" src="~/Content/images/angry-soldier-home.jpg" alt="First Slide" />
            <div class="carousel-caption">
                <h4><i>Angry...</i></h4>
            </div>
        </div>

        <div class="item">
            <img class="img-responsive" src="~/Content/images/happy-soldier-home.jpg" alt="Second Slide" />
            <div class="carousel-caption">
                <h4><i>...Happy...</i></h4>
            </div>
        </div>

        <div class="item">
            <img class="img-responsive" src="~/Content/images/weird-soldier-home.jpg" alt="Third Slide" />
            <div class="carousel-caption">
                <h4><i>...or just plain weird.</i></h4>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#homeCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#homeCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron-fluid jumboUnderCarousel">
    <h2><i>Welcome to Build a Soldier. The finest recruit forming machine on the planet.</i></h2>
</div>

<div class="row thumbsUnderJumbo">
    <div class="col-xs-6 col sm-6 col-md-3 col-lg-3">
        @Html.ActionLink("Headwear", "Index", "Accessories")
        <hr />
        <img src="~/Content/images/acu-helmet.jpg" alt="Accessories Thumbnail">

    </div>
    <div class="col-xs-6 col sm-6 col-md-3 col-lg-3">
        @Html.ActionLink("Tops", "Index", "Tops")
        <hr />
        <img src="~/Content/images/acu-blouse.jpg" alt="Tops Thumbnail">

    </div>
    <div class="col-xs-6 col sm-6 col-md-3 col-lg-3">
        @Html.ActionLink("Bottoms", "Index", "Bottoms")
        <hr />
        <img src="~/Content/images/acu-pants.jpg" alt="Bottoms Thumbnail">
    </div>
    <div class="col-xs-6 col sm-6 col-md-3 col-lg-3">
        @Html.ActionLink("Shoes", "Index", "Shoes")
        <hr />
        <img src="~/Content/images/desert-boots.jpg" alt="Shoes Thumbnail">

    </div>
</div>