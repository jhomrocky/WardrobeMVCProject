<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h3 style="text-align: center; color: lightgray; margin-top: 17px; margin-right: 10px;">Build-a-Soldier 9000</h3>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-pills">
                    <li><a href="#home">@Html.ActionLink("Home", "Index", "Home")</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#outfits">Outfits<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create a new outfit", "Create", "Outfits")</li>
                            <li>@Html.ActionLink("See our premade outfits", "Index", "Outfits")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#clothes">Clothes<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tops", "Index", "Tops")</li>
                            <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                            <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                            <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
